{
  "name": "ghauth",
  "version": "0.7.2",
  "description": "轻量的MC服务器yggdrasil验证",
  "main": "app.js",
  "author": "戴兜(daidr@daidr.me)",
  "license": "MIT",
  "scripts": {
    "start": "pm2 start app.js --name ghauth",
    "restart": "pm2 restart ghauth",
    "stop": "pm2 stop ghauth",
    "logs": "pm2 logs ghauth",
    "monit": "pm2 monit ghauth",
    "helper": "node ./install/install.js",
    "dev": "nodemon -i ./test/",
    "prepare": "husky install",
    "lint": "eslint ./ --fix",
    "format": "prettier . --write"
  },
  "dependencies": {
    "bytes": "^3.1.2",
    "colors": "^1.4.0",
    "crypto-js": "^4.1.1",
    "global": "^4.4.0",
    "humanize-number": "^0.0.2",
    "inquirer": "^9.0.0",
    "ioredis": "^5.1.0",
    "js-yaml": "^4.1.0",
    "jstransformer-markdown-it": "^2.1.0",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-redis": "^4.0.1",
    "koa-router": "^11.0.1",
    "koa-session": "^6.2.0",
    "koa-static-cache": "^5.1.4",
    "koa-views": "^8.0.0",
    "koa2-ratelimit": "^1.1.1",
    "mongoose": "^6.4.3",
    "node-rsa": "^1.1.1",
    "nodemailer": "^6.7.6",
    "passthrough-counter": "^1.0.0",
    "pm2": "^5.2.0",
    "pngjs-nozlib": "^1.0.0",
    "pug": "^3.0.2",
    "svg-captcha": "^1.4.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-pug": "^1.2.4",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      ".git",
      ".svn",
      "node_modules/**/node_modules",
      "public"
    ],
    "verbose": true,
    "watch": [],
    "env": {
      "NODE_ENV": "development"
    },
    "script": "app.js",
    "ext": "js json"
  }
}
